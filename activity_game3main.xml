<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/imd1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#0000ff"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/img"
        android:layout_toEndOf="@+id/img"
        android:layout_marginBottom="115dp">
    </ImageView>
    <ImageView
        android:id="@+id/img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@android:drawable/alert_light_frame"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible">
    </ImageView>
    <ImageView
        android:id="@+id/img2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@android:drawable/alert_light_frame"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
    </ImageView>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imd2"
        android:background="#1d43ce"
        android:layout_alignTop="@+id/imd1"
        android:layout_toRightOf="@+id/imd1"
        android:layout_toEndOf="@+id/imd1"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="30dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imd3"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="30dp"
        android:background="#FF1D26D9"
        android:layout_alignTop="@+id/imd2"
        android:layout_toRightOf="@+id/imd2"
        android:layout_toEndOf="@+id/imd2" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imd4"
        android:layout_alignTop="@+id/imd3"
        android:layout_toRightOf="@+id/imd3"
        android:layout_toEndOf="@+id/imd3"
        android:layout_marginLeft="30dp"
        android:background="#FF1D26D9" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imd5"
        android:background="#FF1D26D9"
        android:layout_alignTop="@+id/imd4"
        android:layout_toRightOf="@+id/imd4"
        android:layout_toEndOf="@+id/imd4"
        android:layout_marginLeft="30dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imd6"
        android:layout_alignTop="@+id/imd5"
        android:layout_toRightOf="@+id/imd5"
        android:layout_toEndOf="@+id/imd5"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:background="#FF1D26D9" />

</RelativeLayout>

